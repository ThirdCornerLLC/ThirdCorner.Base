@using System.Configuration
@using ThirdCorner.Base.Controls
@using ThirdCorner.Base.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon">
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap-theme.min.css"/>
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @RenderSection("head", false)
</head>
<body>
    <div class="row">
        <div class="col-sm-10">App Title</div>
        <div class="col-sm-2"><span class="pull-right">Welcome @LoggedInUser.CurrentUser.FullName</span></div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Menu()</div>
        <div class="col-sm-10">
            <ul id="errorMessageList" class="alert alert-danger field-validation-error" style="display: none"></ul>
            @RenderBody()
        </div>
    </div>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js"></script>

@RenderSection("afterScripts", false)
<script>
    $(document).ready(function() {
        @RenderSection("onload", false)

    });
</script>



</body>
</html>